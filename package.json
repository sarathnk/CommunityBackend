{
  "name": "community-backend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "node --watch index.js",
    "dev:full": "npx cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/community_app npm run dev",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:migrate:deploy": "npx cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/community_app prisma migrate deploy",
    "prisma:seed": "npx cross-env DATABASE_URL=postgresql://postgres:postgres@localhost:5432/community_app node prisma/seed.js",
    "start": "node index.js",
    "build": "prisma generate",
    "postinstall": "prisma generate",
    "setup": "npm install && npm run prisma:migrate:deploy && npm run prisma:seed && echo Setup complete! Run 'npm run dev:full' to start the server"
  },
  "dependencies": {
    "@prisma/client": "^6.17.0",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "razorpay": "^2.9.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "prisma": "^6.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  }
}
